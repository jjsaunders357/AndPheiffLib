<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBack</item>
    </style>

    <style name="ListTheme">
        <item name="android:background">@drawable/pheiff_list_item_state</item>
    </style>

    <style name="ListItem">
        <item name="android:textSize">@dimen/list_text_regular</item>
        <item name="android:layout_margin">@dimen/text_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
